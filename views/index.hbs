<div class="dropdown my-4 d-flex justify-content-center">
  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown"
    aria-expanded="false">
    類別
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
    <li><a class="dropdown-item" href="/records/home-related">家居物業</a></li>
    <li><a class="dropdown-item" href="/records/transportation">交通出行</a></li>
    <li><a class="dropdown-item" href="/records/entertainment">休閒娛樂</a></li>
    <li><a class="dropdown-item" href="/records/food">餐飲食品</a></li>
    <li><a class="dropdown-item" href="/records/other">其他</a></li>
  </ul>
</div>

<div class="total-amount-container d-flex justify-content-center">
  <div class="total-amount d-flex w-75">
    <div class="total-label w-25 fs-3 text-center">總金額:</div>
    <div class="amount w-75 text-center fw-bold">
      <p class="fs-1">{{totalAmount}}</p>
    </div>
  </div>
</div>

{{#each record}}
<div class="records-container d-flex justify-content-center">
  <div class="record d-flex w-75">
    <div class="record-type d-flex w-100">
      <div class="logo d-flex justify-content-center align-items-center mx-2">
        {{#if (isCategorySelected this.category "home-related")}}<i class="fas fa-home fs-1"></i>{{/if}}
        {{#if (isCategorySelected this.category "transportation")}}<i class="fas fa-shuttle-van fs-1"></i></i>{{/if}}
        {{#if (isCategorySelected this.category "entertainment")}}<i class="fas fa-grin-beam fs-1"></i>{{/if}}
        {{#if (isCategorySelected this.category "food")}}<i class="fas fa-utensils fs-1"></i>{{/if}}
        {{#if (isCategorySelected this.category "other")}}<i class="fas fa-pen fs-1"></i>{{/if}}
      </div>
      <div class="type-date w-50">
        <span class="d-block">{{this.name}}</span>
        <span class="d-block">{{formatDate this.date}}</span>
      </div>

      <div class="record-change-delete d-flex w-50">
        <div class="mx-2">{{this.amount}}</div>
        <div class="mx-2">
          <a href="/records/{{this._id}}/edit">修改</a>
        </div>
        <div class="mx-2">
          <form action="/records/{{this._id}}?_method=DELETE" method="post">
            <button type="submit">刪除</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
{{/each}}

<div class="text-center">
  <a href="/records/new" class="btn btn-danger my-3">新增支出</a>
</div>
